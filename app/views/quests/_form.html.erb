<%= form_with(model: quest, id: "new_quest", class: "contents") do |form| %>
  <% if quest.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(quest.errors.count, "error") %> prohibited this quest from being saved:</h2>
      <ul class="list-disc ml-6">
        <% quest.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="flex mb-6 w-full px-4 sm:px-0">
    <div class="flex flex-col sm:flex-row w-full max-w-xl mx-auto gap-2 sm:gap-0">
      <%= form.text_field :title,
            placeholder: "Add my quest list",
            class: "flex-1 rounded-full sm:rounded-l-full sm:rounded-r-none border border-gray-300 px-4 sm:px-6 py-2 sm:py-3 text-sm sm:text-md focus:ring focus:ring-indigo-200 bg-white w-full",
            data: { testid: "quest-input" }, required: true %>
      <%= form.submit "+",
            class: "bg-[#B59E7D] hover:bg-[#584738] text-white font-bold px-4 py-2 rounded-full sm:rounded-r-full sm:rounded-l-none text-base w-20 h-10 sm:w-auto sm:h-auto flex items-center justify-center self-center sm:self-auto",
            data: { testid: "add-quest" } %>
    </div>
  </div>
<% end %>
